<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DungeonCrawlerDictionary" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NEW: columns for list + details -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="StatusText"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    FontSize="14" />

        <ListBox x:Name="EnemiesList"
                    Grid.Row="2"
                    Grid.Column="0"
                    DisplayMemberPath="name"
                    SelectionChanged="EnemiesList_SelectionChanged" />
        <Grid Grid.Row = "2" Grid.Column = "2">
            <Grid.RowDefinitions>
                <RowDefinition Height = "*" />
                <RowDefinition Height = "*" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="EnemyDetails"
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Select an enemy to see details."
                        TextWrapping="Wrap" />
            <TextBlock x:Name = "PlayerDetails"
                        Grid.Row= "1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Text="Player details will be shown here."
                        TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Window>