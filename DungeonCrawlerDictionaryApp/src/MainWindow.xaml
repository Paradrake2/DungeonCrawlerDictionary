<Window x:Class="DCD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DungeonCrawlerDictionary" Height="800" Width="900"
        Loaded="Window_Loaded">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="StatusText"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            FontSize="14" />

        <ListBox x:Name="EnemiesList"
            Grid.Row="2"
            Grid.Column="0"
            DisplayMemberPath="name"
            SelectionChanged="EnemiesList_SelectionChanged" />
        <Grid Grid.Row = "2" Grid.Column = "2">
            <Grid.RowDefinitions>
                <RowDefinition Height = "200" />
                <RowDefinition Height = "*" />
            </Grid.RowDefinitions>
            <!-- Enemy Details-->
        
            <TextBlock x:Name="EnemyDetails"
                Grid.Row="0"
                Grid.Column="0"
                Text="Select an enemy to see details."
                TextWrapping="Wrap" />

            
            <!-- Player Details-->
            <Grid Grid.Row = "1" Grid.Column = "2">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "Auto" />
                    <RowDefinition Height = "*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name = "PlayerStats"
                    Grid.Row= "0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="Input your stats here."
                    TextWrapping="Wrap" />
                <Grid Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width = "*" />
                        <ColumnDefinition Width = "*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                        <RowDefinition Height = "Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text = "Player Health"
                        Grid.Row = "0"
                        Grid.Column = "0" />
                    <TextBox x:Name = "PlayerHealth"
                        Grid.Row = "1"
                        Grid.Column = "0"
                        Text = "" />
                    <TextBlock Text = "Player Damage"
                        Grid.Row = "0"
                        Grid.Column = "1" />
                    <TextBox x:Name = "PlayerDamage"
                        Grid.Row = "1"
                        Grid.Column = "1"
                        Text = "" />
                    <TextBlock Text = "Player Defense"
                        Grid.Row = "2"
                        Grid.Column = "0" />
                    <TextBox x:Name = "PlayerDefense"
                        Grid.Row = "3"
                        Grid.Column = "0"
                        Text = "" />
                    <TextBlock Text = "Player Attack Speed"
                        Grid.Row = "2"
                        Grid.Column = "1" />
                    <TextBox x:Name = "PlayerAttackSpeed"
                        Grid.Row = "3"
                        Grid.Column = "1"
                        Text = "" />
                    <TextBlock Text = "Water Damage"
                        Grid.Row = "4"
                        Grid.Column = "0" />
                    <TextBox x:Name = "WaterDamage"
                        Grid.Row = "5"
                        Grid.Column = "0"
                        Text = "" />
                    <TextBlock Text = "Water Defense"
                        Grid.Row = "4"
                        Grid.Column = "1" />
                    <TextBox x:Name = "WaterDefense"
                        Grid.Row = "5"
                        Grid.Column = "1"
                        Text = "" />
                    <TextBlock Text = "Fire Damage"
                        Grid.Row = "6"
                        Grid.Column = "0" />
                    <TextBox x:Name = "FireDamage"
                        Grid.Row = "7"
                        Grid.Column = "0"
                        Text = "" />
                    <TextBlock Text = "Fire Defense"
                        Grid.Row = "6"
                        Grid.Column = "1" />
                    <TextBox x:Name = "FireDefense"
                        Grid.Row = "7"
                        Grid.Column = "1"
                        Text = "" />
                    <TextBlock Text = "Earth Damage"
                        Grid.Row = "8"
                        Grid.Column = "0" />
                    <TextBox x:Name = "EarthDamage"
                        Grid.Row = "9"
                        Grid.Column = "0"
                        Text = "" />
                    <TextBlock Text = "Earth Defense"
                        Grid.Row = "8"
                        Grid.Column = "1" />
                    <TextBox x:Name = "EarthDefense"
                        Grid.Row = "9"
                        Grid.Column = "1"
                        Text = "" />
                    <TextBlock Text = "Wind Damage"
                        Grid.Row = "10"
                        Grid.Column = "0" />
                    <TextBox x:Name = "WindDamage"
                        Grid.Row = "11"
                        Grid.Column = "0"
                        Text = "" />
                    <TextBlock Text = "Wind Defense"
                        Grid.Row = "10"
                        Grid.Column = "1" />
                    <TextBox x:Name = "WindDefense"
                        Grid.Row = "11"
                        Grid.Column = "1"
                        Text = "" />
                    <TextBlock Text = "Dark Damage"
                        Grid.Row = "12"
                        Grid.Column = "0" />
                    <TextBox x:Name = "DarkDamage"
                        Grid.Row = "13"
                        Grid.Column = "0"
                        Text = "" />
                    <TextBlock Text = "Dark Defense"
                        Grid.Row = "12"
                        Grid.Column = "1" />
                    <TextBox x:Name = "DarkDefense"
                        Grid.Row = "13"
                        Grid.Column = "1"
                        Text = "" />
                    <TextBlock Text = "Light Damage"
                        Grid.Row = "14"
                        Grid.Column = "0" />
                    <TextBox x:Name = "LightDamage"
                        Grid.Row = "15"
                        Grid.Column = "0" />
                    <TextBlock Text = "Light Defense"
                        Grid.Row = "14"
                        Grid.Column = "1" />
                    <TextBox x:Name = "LightDefense"
                        Grid.Row = "15"
                        Grid.Column = "1"
                        Text = "" />
                    <Button x:Name = "LoadPlayerStatsButton"
                        Grid.Row = "16"
                        Grid.Column = "0"
                        Grid.ColumnSpan = "2"
                        Margin = "0,8,0,0"
                        Content = "Load Player Stats"
                        Click="LoadPlayerStatsButton_Click"
                        />
                    <Button x:Name = "CalculateButton"
                        Grid.Row = "17"
                        Grid.Column = "0"
                        Grid.ColumnSpan = "2"
                        Margin = "0,8,0,0"
                        Content = "Calculate Whether You Can Defeat Enemy"
                        Click="CalculateButton_Click"
                        />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>